---
title: Welcome to Hearthstone!
---

<% data.collection.each do |card| %>
  <% id = card[0] %>
  <% amt = card[1] %>

  <div class="card">
    <%= image_tag hearthhead_img_url(id, false) if amt[0] > 0 %>
    <div class="amount">
      <%= "x#{2}" if amt[0] > 1 %>
    </div>
  </div>

  <div class="card">
    <%= image_tag hearthhead_img_url(id, true) if amt[1] > 0 %>
    <div class="amount">
      <%= "x#{2}" if amt[1] > 1 %>
    </div>
  </div>
<% end %>
